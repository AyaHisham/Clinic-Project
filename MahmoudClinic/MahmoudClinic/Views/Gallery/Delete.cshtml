@model MahmoudClinic.Models.Gallery

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Gallery</h4>
    <hr />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BeforePicURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AfterPicURL)
            </th>
        </tr>
        <tr>
            <td style="width:35%">
                <img src="~/Images/GalleryImages/@Model.BeforePicURL" class="img-responsive" style="width:100%" />
            </td>
            <td style="width:35%">
                <img src="~/Images/GalleryImages/@Model.AfterPicURL" class="img-responsive" style="width:100%" />
            </td>
        </tr>
    </table>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-primary" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
