@model IEnumerable<MahmoudClinic.Models.Offers>

@{
    ViewBag.Title = "Offers";
}

<h2>Offers</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OfferPicURL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OfferContent)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style="width:10%">
            <img src="~/Images/OffersImages/@item.OfferPicURL" class="img-responsive" style="width:100%" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OfferContent)
        </td>
        <td>
            <div class="dropdown">
                <a style="padding-left:0px" class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <span class="glyphicon glyphicon-cog" />
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <li>@Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "dropdown-item" })</li>
                    <li>@Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "dropdown-item" })</li>
                </ul>
            </div>
            
        </td>
    </tr>
}

</table>
